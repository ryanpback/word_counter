<form action="/word_finder">
 <div class="form-group">
   <input id="user_string" class="form-control" type="text" name="user_string" placeholder="Enter your string">
 </div>
 <div class="form-group">
   <input id="word_select" class="form-control" type="text" name="word_select" placeholder="Enter the word you want to count">
 </div>
 <div class="radio">
  <input id="exact_select" type="radio" name="select" value="exact" checked>
  <label for="exact_select">Find Exact Match</label>
</div>
<div class="radio">
  <input id="partial_select" type="radio" name="select" value="partial">
  <label for="partial_select">Find Partial Matches</label>
</div>
<button type="submit" class="btn-success">Button Text</button>
</form>
